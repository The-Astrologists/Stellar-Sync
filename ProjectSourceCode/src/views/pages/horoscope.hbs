{{> header}}
<!-- horoscope.hbs -->
<h1>Your Horoscope</h1>
<select id="zodiacSign">
    <option value="Capricorn">Capricorn</option>
    <option value="Aquarius">Aquarius</option>
    <!-- Add all other zodiac signs here -->
</select>
<button id="generateHoroscope">Generate Horoscope</button>
<div id="horoscopeResult"></div>

<script>
    document.getElementById("generateHoroscope").addEventListener("click", async () => {
        const zodiacSign = document.getElementById("zodiacSign").value;

        try {
            const response = await fetch("/horoscope", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ zodiacSign })
            });
            const data = await response.json();
            document.getElementById("horoscopeResult").innerText = data.horoscope || "No result";
        } catch (error) {
            console.error("Error fetching horoscope:", error);
            document.getElementById("horoscopeResult").innerText = "An error occurred. Please try again.";
        }
    });
</script>


