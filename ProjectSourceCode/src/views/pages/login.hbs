{{> header}}
    <div class="transparent-background-black" style=  "margin-top: 100px; margin-left: 500px; margin-right: 500px; margin-bottom: 200px;">
      <h5>Login</h5>
      <form action="/login" method="POST">
        <div style= "margin-left: 50px; margin-right: 50px;">
          <hr style = "color: white;">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required />
        </div>

        <div style= "margin-left: 50px; margin-right: 50px; margin-top: 30px;">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
        </div>
        <div class = "button-container">
          <button style= "margin-top: 20px; margin-bottom: 10px;" type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
        <hr style = "color: white; margin-left: 50px; margin-right: 50px;">
        <p style="text-align: center; margin-bottom: 30px; margin-top: 30px;">Don't have an account? 
            <a href="/register" style="color: black;">Register</a>
</p>
    {{> message}}
    </div>
{{> footer}}  
